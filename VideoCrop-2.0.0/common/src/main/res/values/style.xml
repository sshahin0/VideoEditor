<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- AppBarLayout -->
    <style name="Widget.App.AppBarLayout.Surface" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar</item>
        <item name="actionMenuTextColor">?colorPrimary</item>
    </style>

    <!-- Tab Layout -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.TabItem</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView" />

    <!-- Button -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/sf_ui_display</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- Outline Button -->
    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/sf_ui_display</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.App.Button.OutlinedButton">
        <item name="iconTint">@color/color_primary_on_surface_checked</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.WithText" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="fontFamily">@font/sf_ui_display</item>
        <item name="iconGravity">top</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.BottomNav" parent="Widget.App.Button.OutlinedButton.IconOnly.WithText">
        <item name="android:minWidth">75dp</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">40dp</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/sf_ui_display</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- Icon Only Button -->
    <style name="Widget.App.IconOnlyImageButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Widget.App.IconOnlyImageButton.OnSurface" parent="Widget.App.IconOnlyImageButton">
        <item name="tint">@color/color_on_surface_disable_enabled</item>
    </style>

    <!-- Bottom Sheets -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.App.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Widget.App.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- Alert Dialog -->
    <style name="ThemeOverlay.App.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?colorHighEmphasis</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.TextButton</item>
    </style>

    <style name="Widget.App.Button.Icon.Toolbar" parent="Widget.App.Button.TextButton">
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/color_on_surface_disable_enabled</item>
    </style>

    <style name="Widget.App.Button.Icon.BottomOption" parent="Widget.App.Button.TextButton">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/color_primary_on_surface_checked</item>
    </style>
</resources>
